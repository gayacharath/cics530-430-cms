<h1>Resources</h1>
<%= link_to 'Add', new_resource_path, :class => 'btn btn-primary' %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>User</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
<% @resources.each do |resource| %>
      <tr>
        <td><%= link_to resource.name, resource %></td>
        <td><%= link_to resource.user.name, resource_path(resource) %></td>
        <td><%= resource.updated_at.to_s(:slash_time) %></td>
        <td><%= link_to resource.file_name, resource.file.url if resource.file? %></td>

        <td>
          <%= link_to 'Edit', edit_resource_path(resource), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', resource_path(resource), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>
