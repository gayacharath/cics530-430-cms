<h1>Resources</h1>
<%= link_to 'Add', new_resource_path, :class => 'btn btn-primary' %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>User</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @resources.each do |resource| %>
      <tr>
        <td><%= resource.id %></td>
        <td><%= link_to resource.user_id, resource_path(resource) %></td>
        <td><%= resource.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_resource_path(resource), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', resource_path(resource), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
