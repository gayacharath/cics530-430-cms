<h1>Projects</h1>
<%= link_to 'Add', new_project_path, :class => 'btn btn-primary' %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Contributors</th>
      <th>Owner</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>

<% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, project_path(project) %></td>
        <td><%= project.users.count %></td>
        <td><%= link_to project.owner.full_name, user_path(project.owner) %></td>
        <td><%= project.created_at.to_s(:slash_time) %></td>

        <td>
          <% if can? :edit, project %>
            <%= link_to 'Edit', edit_project_path(project), :class => 'btn btn-mini' %>
          <% end %>

          <% if can? :destroy, project %>
            <%= link_to 'Destroy', project_path(project), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>

  </tbody>
</table>


