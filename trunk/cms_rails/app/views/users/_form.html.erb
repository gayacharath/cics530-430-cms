<%= simple_form_for(@user, :html => { :class => 'form-horizontal' } ) do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> User</legend>
    <%= f.input :full_name, :wrapper_html => { :class => 'control-group'}, :label_html => { :class => 'control-label'}, :input_html => { :class => 'text-field'} %>
    <%= f.input :pref_name, :wrapper_html => { :class => 'control-group'}, :label_html => { :class => 'control-label'}, :input_html => { :class => 'text-field'} %>
    <%= f.input :email, :wrapper_html => { :class => 'control-group'}, :label_html => { :class => 'control-label'}, :input_html => { :class => 'text-field'} %>
    <%= f.input :password, :wrapper_html => { :class => 'control-group'}, :label_html => { :class => 'control-label'}, :input_html => { :class => 'text-field'} %>
    <%= f.input :password_confirmation, :wrapper_html => { :class => 'control-group'}, :label_html => { :class => 'control-label'}, :input_html => { :class => 'text-field'} %>
    
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', users_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>


<%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
